body
  padding: 50px
  font-family: "Lucida Grande", Helvetica, Arial, sans-serif
  font-size: 14px
html, body
  font-size: 14px  
a
  color: #00B7FF

html, body
  height: 100%

.wrap 
  min-height: 100%
  height: auto !important
  height: 100%
  margin: 0 auto -60px

.push, .footer 
  height: 60px  

.footer
  background-color: #f5f5f5

@media (min-width: 768px) {
  body {
    font-size: 18px;
  }
  h1 {
    font-size: 1.5em;
  }
}
@media (min-width: 480px) {
  body {
    font-size: 22px;
  }
  h1 {
    font-size: 2em;
  }
}